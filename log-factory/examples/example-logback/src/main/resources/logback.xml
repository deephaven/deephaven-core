<configuration debug="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.example.noisy" level="WARN"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>